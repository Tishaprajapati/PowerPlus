<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spFoodItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity (in grams)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnAddSelectedFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Selected Food"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etNewFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Food Name"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNewFoodCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calories (per 100g)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnAddNewFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Food"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvFoodList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food List:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvFoodListContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>