<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCalorieGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Calorie Goal: 2000"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/tvCaloriesConsumed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Calories Consumed Today: 1500"
                    android:textAppearance="?attr/textAppearanceBody1" />

                <Button
                    android:id="@+id/btnChangeCalorieGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Calorie Goal" />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Add more cards or UI elements for additional dashboard information -->

    </LinearLayout>

</androidx.core.widget.NestedScrollView>